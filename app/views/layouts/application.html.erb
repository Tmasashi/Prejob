<!DOCTYPE html>
<html>
<head>
  <title>Prejob</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<nav>
		<% if author_signed_in? %>
			Logged in as <strong><%= current_author.email %></strong>
			<%= link_to "プロフィール変更", edit_author_registration_path %>
			<%= link_to "ログアウト", destroy_author_session_path, method: :delete %>
		<% else %>
			<%= link_to "サインイン", new_author_registration_path %>
			<%= link_to "ログイン", new_author_session_path %>
		<% end %>
	</nav>
</header>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>
