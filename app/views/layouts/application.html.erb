<!DOCTYPE html>
<html>
<head>
  <title>Prejob</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<nav>
		<% if company_signed_in? %>
			Logged in as <strong><%= current_company.email %></strong>
			<%= link_to "プロフィール変更", edit_company_registration_path %>
			<%= link_to "ログアウト", destroy_company_session_path, method: :delete %>
		<% elsif student_signed_in? %>
			Logged in as <strong><%= current_student.email %></strong>
			<%= link_to "プロフィール変更", edit_student_registration_path %>
			<%= link_to "ログアウト", destroy_student_session_path, method: :delete %>
		<% else %>
			<%= link_to "企業サインイン", new_company_registration_path %>
			<%= link_to "企業ログイン", new_company_session_path %>
			<%= link_to "学生サインイン", new_student_registration_path %>
			<%= link_to "学生ログイン", new_student_session_path %>
		<% end %>
	</nav>
</header>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>
