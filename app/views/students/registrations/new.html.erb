<h2>学生登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "氏名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :birthday, "誕生日" %><br />
    <%= f.date_select :birthday, :start_year => 1980, :use_month_numbers => true %>
  </div>

  <div class="field">
    <%= f.label :gender, "性別" %><br />
    <%= f.select :gender, [["男",0], ["女",1]] %>
  </div>

  <div class="field">
    <%= f.label :department_id, "学部" %><br />
    <%= f.collection_select :department_id, Department.all, :id, :major %>
  </div>

  <div class="field">
    <%= f.label :grade_id, "学年" %><br />
    <%= f.collection_select :grade_id, Grade.all, :id, :belonging %>
  </div>

  <div class="field">
    <%= f.label :prefecture_id, "居住都道府県" %><br />
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :place %>
  </div>

  <div class="field">
    <%= f.label :email, "Eメールアドレス" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "students/shared/links" %>